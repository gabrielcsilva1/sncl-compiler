{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")"},
    { "open": "'", "close": "'", "notIn": ["string", "comment"]},
    { "open": "\"", "close": "\"", "notIn": ["string"]},
    { "open": "/**", "close": "*/", "notIn": ["string"]},

  ],
  "surroundingPairs": [
    { "open": "(", "close": ")"},
    { "open": "'", "close": "'"},
    { "open": "\"", "close": "\""},
  ],
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(area|context|macro|media|region|do)\\b",
    "decreaseIndentPattern": "^\\s*end\\b(?!\\s*:)"
  }
}
