{
  "name": "sNCL",
  "scopeName": "source.sncl",
  "patterns": [
    {
      "name": "meta.object-literal.key.sncl",
      "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)(?=\\s*:\\s*)"
    },
    {
      "name": "keyword.control.sncl",
      "match": "\\b(area|context|do|end|media|onBegin|onEnd|onSelection|port|region|set|start|stop)\\b"
    },
    {
      "name": "variable.other.local.sncl",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
    },
    {
      "name": "constant.color.hex",
      "match": "#([0-9a-fA-F]{6}|[0-9a-fA-F]{3})"
    },
    {
      "name": "constant.numeric.sncl",
      "match": "\\b\\d+\\b"
    },
    {
      "name": "keyword.operator.arithmetic.sncl",
      "match": "[%/]"
   },
    {
      "name": "punctuation.separator.key-value.sncl",
      "match": ":"
    },
    {
      "name": "string.quoted.double.sncl",
      "begin": "\"",
      "end": "\""
    }
  ]
}
