{
  "name": "sncl-compiler",
  "repository": {
    "type": "git",
    "url": "https://github.com/gabrielcsilva1/sncl-compiler"
  },
  "displayName": "sNCL Compiler",
  "description": "Extension to compile sNCL code to Ginga NCL",
  "publisher": "gabrielcsilva1",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sncl-compiler.compile",
        "title": "Compile sNCl to Ginga NCL",
        "category": "sNCL",
        "icon": "$(play)"
      }
    ],
    "grammars": [
      {
        "language": "sncl",
        "scopeName": "source.sncl",
        "path": "./syntaxes/sncl.tmLanguage.json"
      }
    ],
    "languages": [
      {
        "id": "sncl",
        "aliases": ["sNCL", "sncl"],
        "configuration": "./language-configuration.json",
        "extensions": [
          ".sncl"
        ]
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "sncl-compiler.compile",
          "when": "resourceLangId == sncl",
          "group": "navigation"
        }
      ]
    },
    "snippets": [
      {
        "language": "sncl",
        "path": "./snippets/sncl.code-snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "pnpm vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
